@model List<SYSWEB.Entities.FacturasEnt>

@{
    ViewData["Title"] = "ConsultarUsuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Información de Facturas</h4>

            <br>

            <table id="showData" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Número Factura</th>
                        <th>Fecha Compra</th>
                        <th>Total Compra</th>
                        <th>Ver Detalle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="text-align:center">
                            <td># @item.IdFactura</td>
                            <td>@item.FechaPago</td>
                            <td>@item.TotalPago.ToString("N2")</td>
                            <td><a href="@Url.Action("ConsultarDetalleFactura","Carrito", new { q = item.IdFactura })"><i class="fa fa-search fa-lg"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script>
    $(document).ready(function () {
        $('#showData').dataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
            }
        });
    });
</script>